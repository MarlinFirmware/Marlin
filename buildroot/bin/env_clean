#!/usr/bin/env bash

[ -d .pioenvs ] && rm -r .pioenvs
[ -d .piolibdeps ] && rm -r .piolibdeps
[ -d .piolib ] && rm -r .piolib

if [ ! -z "$1" ]; then
  if [ $1 = "--deep" ]; then
    [ -d ~/.platformio/packages ] && [ ! -z "$(ls -A ~/.platformio/packages)" ] && rm -r ~/.platformio/packages/*
    [ -d ~/.platformio/platforms ] && [ ! -z "$(ls -A ~/.platformio/platforms)" ] && rm -r ~/.platformio/platforms/*
    [ -d ~/.platformio/.cache ] && [ ! -z "$(ls -A ~/.platformio/.cache)" ] && rm -r ~/.platformio/.cache/*
  fi
fi
